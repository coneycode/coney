<div id="main">
<% page.posts.each(function(item){ 
 if(item.top){ %>
  <%- partial('_partial/article', {item: item, index: true,desc: true}) %>
<% }}); %>
<% page.posts.each(function(item){ if(!item.top){%>
  <%- partial('_partial/article', {item: item, index: true,desc: true}) %>
<%   }}); %>
<% if (page.total > 1){ %>
  <nav id="page-nav" class="clearfix">
    <%- paginator({
      prev_text: '&laquo; 上一页',
      next_text: '下一页 &raquo;'
    }) %>
  </nav>
<% } %>
</div>
