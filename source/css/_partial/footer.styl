footer
  margin-top 3em
  margin-bottom 3em
  padding 0 2% 0.5em

#footer
  width 100%
  margin 0 auto
  overflow hidden
  position relative
  .line
    width 100%
    height 14em
    margin 0 auto
    @media mini
      width 10em
      float left
      position relative
    span
      display block
      width 0.5em
      height 6.25em
      border-right 0.125em solid color-white
      margin 0 auto
      @media mini
        position absolute
        left 3em
        margin 0 0 1.5em

.copyright
  background color-footer
  border-radius 6px
  if ShowCustomFont
    font-smoothing()
    font-family font-default
  else
    font-family font-default
    font-size 1em
  width 100%
  color color-black
  text-align center
  @media mini
    float left
  a
    color color-font
    &:hover
      color color-theme
